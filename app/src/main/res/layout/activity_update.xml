<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"

        >
         <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00b5b5"
            android:gravity="center"
            android:text="Pengaturan Aplikasi"
            android:textColor="#3949AB"
            android:textSize="@dimen/_18ssp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi Aplikasi :  "
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/_8sdp"
/>
            <EditText
            android:id="@+id/Eversi"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/clock"
            android:gravity="center"
            android:inputType="number"
            android:hint="1"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_8sdp"
            />
        <Button
            android:id="@+id/btnUpdateApp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:text="Update Aplikasi"
            android:onClick="onClickUpdate"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/textlines"
            />

        </LinearLayout>
        <TextView
            android:id="@+id/progrssupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/_8sdp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Url :  "
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/_8sdp"
            />
        <EditText
            android:id="@+id/addresUrl"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/urlupdateapp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_margin="@dimen/_8sdp"
            />
        <Button
            android:id="@+id/btnOpenBrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:text="Go"
            android:onClick="onClickBrows"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/textlines"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            tools:ignore="WebViewLayout" />
    </LinearLayout>
         </LinearLayout>
</ScrollView>