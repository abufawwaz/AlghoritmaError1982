<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <!--sini jadwal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SUBUH"
                android:background="@color/tsubuh"
                android:textStyle="bold"

                android:textSize="@dimen/Textjadwal"
                />

            <EditText
                android:id="@+id/subuh"
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
             android:hint="12"

                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tdzuhur"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="DZUHUR"

                />

            <EditText
                android:id="@+id/dzuhur"
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
               android:hint="12"

                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tashar"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ASHAR" />

            <EditText
                android:id="@+id/ashar"
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
                android:hint="12"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/layout_horizontal_maghrib"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tmaghrib"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="MAGHRIB" />

            <EditText
                android:id="@+id/maghrib"
                android:layout_width="@dimen/layout_horizontal_maghrib"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
               android:hint="12"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tisya"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ISYA"

                />

            <EditText
                android:id="@+id/isya"
                android:layout_width="@dimen/layout_horizontal_sholat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:hint="12"
                android:textSize="@dimen/Textjadwal"
                android:textStyle="bold"
                android:minHeight="48dp"/>

        </LinearLayout>
    </LinearLayout>
    <!--enderror-->

    <TextView
        android:id="@+id/notetimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="1.0dip"
        android:singleLine="true"
        android:text="@string/infotimer"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/Textfoot"
        android:textStyle="bold|normal"
        android:typeface="sans" />
</LinearLayout>