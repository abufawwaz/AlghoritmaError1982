<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  android:layout_gravity="center_horizontal"
    >


    <TextView
        android:id="@+id/notetimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="1.0dip"
        android:singleLine="true"
        android:text="@string/infotimer"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold|normal"
        android:typeface="sans" />
    <!--sini jadwal-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/white"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SUBUH"
                android:background="@color/tsubuh"
                android:textStyle="bold"

                android:textSize="@dimen/_13ssp"
                />

            <EditText
                android:id="@+id/timersubuh"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
             android:hint="16"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tdzuhur"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="DZUHUR"

                />

            <EditText
                android:id="@+id/timerdzuhur"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
               android:hint="12"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tashar"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ASHAR" />

            <EditText
                android:id="@+id/timerashar"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
                android:inputType="number"
                android:hint="12"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tmaghrib"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="MAGHRIB" />

            <EditText
                android:id="@+id/timermaghrib"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:minHeight="48dp"
                android:inputType="number"
               android:hint="12"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/tisya"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ISYA"

                />

            <EditText
                android:id="@+id/timerisya"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/clock"
                android:gravity="center"
                android:hint="12"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:minHeight="48dp"/>

        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>
    <!--enderror-->
    <Button
        android:id="@+id/btnsimpansetup"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="10dp"
        android:text="SIMPAN"
        android:onClick="onClickSave"
        android:background="@drawable/textlines"
        />

</LinearLayout>