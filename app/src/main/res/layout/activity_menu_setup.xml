<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:textSize="30dp"
            android:background="#00b5b5"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Pengaturan Aplikasi"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnBack"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Back"
                android:onClick="onClick"
                android:layout_gravity="center_vertical|center_horizontal|end"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnkeuangan"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Infak"
                android:onClick="onClick"
                android:layout_gravity="center_vertical|center_horizontal|end"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/newDB"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:text="CATATAN"
                android:onClick="onClickNew"
                android:gravity="center"
                android:layout_gravity="right|center_vertical|center_horizontal|end"/>

            <Button
                android:id="@+id/btndate"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Set Waktu"
                android:onClick="onClick"
                android:layout_gravity="right|center_vertical|center_horizontal|end"/>

            <Button
                android:id="@+id/btnwifi"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Set Wifi"
                android:onClick="onClick"
                android:layout_gravity="right|center_vertical|center_horizontal|end"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnset"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="App"
                android:onClick="onClick"
                android:layout_gravity="center_vertical|center_horizontal|end"
                android:textStyle="bold"
                />



        </LinearLayout>

        <include layout="@layout/setup_masjid" />
        <include layout="@layout/setup_timer_iqomat" />
    </LinearLayout>
</ScrollView>